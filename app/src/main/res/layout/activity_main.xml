<?xml version="1.0" encoding="utf-8"?>
<com.jankrav.example.swipe.view.VerticalPager xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_vertical_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/main_top_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.jankrav.example.swipe.fragment.container.TopCompositeFragment" />

    <fragment
        android:id="@+id/main_central_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.jankrav.example.swipe.fragment.container.CentralCompositeFragment" />

    <fragment
        android:id="@+id/main_bottom_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.jankrav.example.swipe.fragment.container.BottomCompositeFragment" />

</com.jankrav.example.swipe.view.VerticalPager>